<Window x:Class="EquipmentAccounting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipmentAccounting"
        mc:Ignorable="d"
        Title="Учет оборудования" Height="450" Width="800">
    <Grid>
        <Border Grid.Column="1" CornerRadius="0,10,10,0" Background="White">
            <Grid>
                <!-- Контейнер для контента -->
                <ContentControl x:Name="ContentArea" Content="{Binding}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <ContentPresenter Content="{Binding}"/>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </Grid>
        </Border>
    </Grid>
</Window>
